
<div class="container">
  <h1>New Game</h1>

  <div class="selection">
    <% index_final = (@letters.length - 1) %>
    <% (0..index_final).each do |index|%>
      <span class="random-letters"><%= @letters[index] %></span>
    <% end %>
  </div>

  <div class="entry-form">
    <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input class="form-group" type="text" name="word" placeholder="What is the longest word you can find ?">
      <input class="btn btn-primary" type="submit" value="Play">
    </form>
  </div>

</div>


